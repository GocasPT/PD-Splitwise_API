<?xml version="1.0" encoding="UTF-8"?>

<?import com.dlsc.gemsfx.Spacer?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            fx:controller="pt.isec.pd.splitwise.client.ui.controller.view.GroupController">
    <center>
        <VBox BorderPane.alignment="TOP_CENTER">
            <HBox alignment="CENTER" spacing="8.0">
                <Button fx:id="btnExpenses" layoutX="59.0" layoutY="18.0" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Expenses" textAlignment="CENTER"/>
                <Button fx:id="btnPay" lineSpacing="8.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Pay" textAlignment="CENTER"/>
                <Button fx:id="btnBalance" lineSpacing="8.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Balance" textAlignment="CENTER"/>
                <Button fx:id="btnTotalSpend" lineSpacing="8.0" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" text="Total" textAlignment="CENTER"/>
                <Button fx:id="btnExport" lineSpacing="8.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Export" textAlignment="CENTER"/>
                <padding>
                    <Insets bottom="10.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </HBox>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                <VBox fx:id="vbInfo" alignment="TOP_CENTER" spacing="4.0">
                    <padding>
                        <Insets left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </VBox>
            </ScrollPane>
            <BorderPane.margin>
                <Insets top="8.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER">
                <VBox.margin>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </VBox.margin>
                <Spacer/>
                <Text fx:id="txtGroupName" strokeType="OUTSIDE" strokeWidth="0.0" text="[GROUP_NAME]"
                      textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Text>
                <Spacer/>
                <Button fx:id="btnSettings" mnemonicParsing="false" style="-fx-background-color: transparent;;">
                    <graphic>
                        <FontIcon iconLiteral="bi-gear-fill" iconSize="20"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>
    <bottom>
        <fx:include source="../components/navbar.fxml"/>
    </bottom>
</BorderPane>
